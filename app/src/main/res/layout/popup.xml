<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="250dp"
    android:background="@drawable/bg_popup"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/lblJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anda ingin mendaftar \nsebagai ?"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#9125c5"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lblJudul"
        android:id="@+id/btnPersonal"
        android:textColor="#9125c5"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_popup"
        android:text="Personal"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:paddingLeft="40dp"
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"/>

    <Button
        android:layout_below="@+id/btnPersonal"
        android:layout_marginTop="15dp"
        android:id="@+id/btnPerusahaan"
        android:textColor="#9125c5"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_popup"
        android:text="Perusahaan"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:paddingLeft="40dp"
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"/>

</RelativeLayout>