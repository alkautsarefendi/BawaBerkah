<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="250dp"
    android:background="@drawable/bg_popup"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/lblJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan E-mail anda, \nkami akan mengirimkan Link \nke E-mail terdaftar anda."
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#9125c5"
        android:textSize="16sp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@+id/lblJudul"
        android:id="@+id/email"
        android:hint="E-Mail"
        android:textColorHint="#9125c5"
        android:background="@drawable/btn_popup"
        android:drawablePadding="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="50"
        android:textColor="#9125c5"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_below="@+id/email"
        android:layout_marginTop="15dp"
        android:id="@+id/btnReset"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#9125c5"
        android:text="Kirim"
        android:drawablePadding="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"/>

</RelativeLayout>