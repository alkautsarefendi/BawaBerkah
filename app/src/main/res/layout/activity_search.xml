<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE6D8"
    android:orientation="vertical"
    tools:context=".Activity.SearchActivity"
    android:weightSum="10">
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/itemCategory"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>
        <EditText
            android:id="@+id/search"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:background="@drawable/frame"
            android:hint="cari nama campaign"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_weight="0.7"/>
        <android.support.v7.widget.AppCompatSpinner
            android:layout_marginTop="0dp"
            android:id="@+id/spinnerTipe"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.2"
            android:background="@drawable/frame"
            tools:listitem="@layout/support_simple_spinner_dropdown_item"
            android:entries="@array/kategori"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/tmblSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_action_go"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_sort_white_24dp"/>
        <ImageView
            android:id="@+id/filterKategori"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_menu_white_24dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/header"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerTemp"
        android:scrollbars="vertical"/>
</RelativeLayout>