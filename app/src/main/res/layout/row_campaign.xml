<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGrid"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/layoutImage"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambarCampaign"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/targetDana"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="@android:color/black"
                    android:textSize="0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/judulCampaign"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Bantu Korban Banjir di Berbagai Daerah"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/danaTerkumpul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="5sp"
                    android:text="Rp 60.000.000,-"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressfunding"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:indeterminate="false"
                    android:background="@color/bgBottomNavigation"
                    android:max="100"
                    android:minHeight="8dp"
                    android:progress="0"
                    android:theme="@style/AppTheme.WhiteAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.5"
                        android:text="Sisa Hari"
                        android:paddingLeft="4dp"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="0.5"
                        android:text="Progress"
                        android:gravity="right"
                        android:paddingRight="4dp"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:textColor="#000000"
                        android:paddingLeft="4dp"
                        android:layout_marginLeft="3dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:paddingRight="4dp"
                        android:drawableRight="@drawable/ic_percentage"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDonasi"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/tombol_donasi"
                        android:text="Donasi"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />

                    <!--<Button
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/tombol_detail"
                        android:text="Detail"
                        android:textColor="@android:color/black"
                        android:textSize="10dp" />-->
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />
</GridLayout>
